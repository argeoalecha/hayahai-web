# Staging Environment Configuration
# This file contains staging-specific environment variables

# Core configuration
NODE_ENV=staging
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=staging-secret-key-at-least-32-characters-long

# Database - Using local PostgreSQL for staging
DATABASE_URL=postgresql://postgres:password@localhost:5432/hayahai_staging
DIRECT_URL=postgresql://postgres:password@localhost:5432/hayahai_staging

# Authentication providers (development keys)
GOOGLE_CLIENT_ID=staging-google-client-id
GOOGLE_CLIENT_SECRET=staging-google-client-secret
GITHUB_CLIENT_ID=staging-github-client-id
GITHUB_CLIENT_SECRET=staging-github-client-secret

# File upload (staging)
UPLOADTHING_SECRET=sk_staging_uploadthing_secret
UPLOADTHING_APP_ID=staging_uploadthing_app_id

# Email (staging)
RESEND_API_KEY=re_staging_resend_api_key
FROM_EMAIL=noreply@staging.hayah-ai.com

# Monitoring (staging)
SENTRY_DSN=https://staging-sentry-dsn@sentry.io/project-id
GOOGLE_ANALYTICS_ID=G-STAGING123

# Alerting (staging webhooks - optional)
SLACK_WEBHOOK_DB=https://hooks.slack.com/services/staging/db
SLACK_WEBHOOK_API=https://hooks.slack.com/services/staging/api
SLACK_WEBHOOK_AUTH=https://hooks.slack.com/services/staging/auth
SLACK_WEBHOOK_PERF=https://hooks.slack.com/services/staging/perf
SLACK_WEBHOOK_SEC=https://hooks.slack.com/services/staging/sec
CRITICAL_ALERT_EMAIL=admin@staging.hayah-ai.com

# Feature flags
ENABLE_COMMENTS=true
ENABLE_ANALYTICS=true

# Performance limits
MAX_FILE_SIZE=10485760
RATE_LIMIT_MAX=100

# Development
NEXT_TELEMETRY_DISABLED=1
ANALYZE=false