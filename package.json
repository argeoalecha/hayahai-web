{
  "name": "hayah-ai-blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "npx prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:all": "npm run test && npm run test:e2e",
    "test:e2e": "playwright test",
    "test:performance": "lhci autorun",
    "test:smoke:staging": "NODE_ENV=staging npm run test:e2e -- --grep='@smoke'",
    "analyze": "ANALYZE=true npm run build",
    "security:scan": "npm audit && snyk test",
    "env:validate": "tsx scripts/validate-env.ts",
    "health:external": "tsx scripts/health-check.ts",
    "health:comprehensive": "tsx scripts/comprehensive-health.ts",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:rollback": "prisma migrate diff --from-migrations ./prisma/migrations --to-schema-datamodel ./prisma/schema.prisma",
    "db:seed:staging": "tsx prisma/seed.ts",
    "db:pool:status": "tsx scripts/db-pool-status.ts",
    "pre-deploy:checks": "npm run type-check && npm run lint && npm run test:all && npm run security:scan",
    "backup:create": "tsx scripts/create-backup.ts",
    "verify:deployment": "tsx scripts/verify-deployment.ts"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^1.0.9",
    "@prisma/client": "^5.7.1",
    "@sentry/nextjs": "^7.120.4",
    "@tanstack/react-query": "^5.17.9",
    "@types/bcryptjs": "^2.4.6",
    "@uploadthing/react": "^6.2.2",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "dotenv": "^17.2.2",
    "leaflet": "^1.9.4",
    "lighthouse": "^12.8.2",
    "lucide-react": "^0.303.0",
    "next": "14.0.4",
    "next-auth": "^4.24.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-leaflet": "^4.2.1",
    "resend": "^2.1.0",
    "tailwind-merge": "^2.2.0",
    "typescript": "^5.3.3",
    "uploadthing": "^6.2.3",
    "web-vitals": "^5.1.0",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@lhci/cli": "^0.12.0",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/typography": "^0.5.10",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "@types/leaflet": "^1.9.20",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.4",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "next-router-mock": "^0.9.10",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "prisma": "^5.7.1",
    "snyk": "^1.1266.0",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.7.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
